IF
  !Global("CELL_03","MYAREA",0)
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    Deactivate(Myself)
END

IF
  !Global("CELL_03","MYAREA",0)
  OpenState(Myself,FALSE)
THEN
  RESPONSE #100
    Unlock(Myself)
    OpenDoor(Myself)
END

IF
  Global("CELL_03","MYAREA",0)
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    SetGlobal("CELL_03","MYAREA",1)
END

