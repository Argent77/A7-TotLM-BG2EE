IF
  !Global("CREATURE_STATE_VARBit10","LOCALS",1)
  HPPercentLT(Myself,100)
  !StateCheck(Myself,STATE_REALLY_DEAD)
THEN
  RESPONSE #100
    SetGlobal("CREATURE_STATE_VARBit10","LOCALS",1)
    ReallyForceSpell(Myself,WIZARD_SNILLOCS_SNOWBALL_SWARM)
    Kill(Myself)
END

