IF
  Global("ALTAR_OF_HEAVEN","MYAREA",0)
  Contains("DGEM03",Myself)
THEN
  RESPONSE #100
    SetGlobal("ALTAR_OF_HEAVEN","MYAREA",1)
    DestroyItem("DGEM03")
    ForceSpell(Myself,INNATE_CONTAINER_GLOW)
END

